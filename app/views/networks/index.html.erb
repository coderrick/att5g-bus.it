<p id="notice"><%= notice %></p>

<h1>Networks</h1>

<div class="chart1">
  <%= bar_chart @networks.group(:bus_id).count %>

</div>

<table>
  <thead>
    <tr>
      <th>Bus</th>
      <th>5g</th>
      <th>Station</th>
      <th>Bandwidth</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @networks.each do |network| %>
      <tr>
        <td><%= network.bus_id %></td>
        <td><%= network.five_g %></td>
        <td><%= network.station_id %></td>
        <td><%= network.bandwidth %></td>
        <td><%= network.start %></td>
        <td><%= network.end %></td>
        <td><%= link_to 'Show', network %></td>
        <td><%= link_to 'Edit', edit_network_path(network) %></td>
        <td><%= link_to 'Destroy', network, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Network', new_network_path %>
